<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Signup Page</title>
    <style>
      body {
        background-color: #333; /* Dark grey background */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .container {
        background-color: #e1f5fe; /* Light blue background for the card */
        border: 2px solid #2196f3; /* Blue border */
        border-radius: 8px;
        padding: 20px;
        width: 400px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }
      label {
        font-weight: bold;
      }
      .btn-primary {
        background-color: #4caf50; /* Green button */
        border: none;
      }
      .btn-primary:hover {
        background-color: #45a049;
      }
    </style>
  </head>
  <body>
    <div class="container mb-3">
      <% if (locals.message) { %>
      <div class="alert alert-success" role="alert"><%= locals.message %></div>
      <% } %>

      <form
        action="/vendor/additem"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="m-3">
          <label for="productimage" class="form-label">Product Image</label>
          <input
            required
            name="productimage"
            type="file"
            accept="image/*"
            class="form-control"
            id="productimage"
            aria-describedby="emailHelp"
          />
          <input type="hidden" name="profileurlBase64" id="profileurlBase64" />
        </div>
        <div class="m-3">
          <label for="productname" class="form-label">Product Name</label>
          <input
            required
            type="text"
            class="form-control"
            id="productname"
            aria-describedby="emailHelp"
            name="productname"
          />
        </div>
        <div class="m-3">
          <label for="productprice" class="form-label">Product Price</label>
          <input
            required
            type="number"
            class="form-control"
            id="productprice"
            name="productprice"
          />
        </div>
        <button type="submit" class="btn btn-primary m-3">Submit</button>
      </form>
    </div>
    <%- include("./partials/script") %>
  </body>
</html>
